<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">

    <link rel="canonical" href="{{ canonical_url }}">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    <!-- Faça aqui suas chamadas CSS -->
    {% style %}
      {{ settings.theme_font | font_face }}
      :root {
        --font-family: {{ settings.theme_font.family }};
      }
    {% endstyle %}

    {{ 'theme.css' | asset_url | stylesheet_tag }}
    {{ 'utilities.css' | asset_url | stylesheet_tag }}
    {{ 'animations.css' | asset_url | stylesheet_tag }}
  </head>

  <body>
    {% section 'announcement-bar' %}
    {% section 'header' %}

    <main role="main">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}
    <!-- Faça aqui suas chamadas JS -->
    <script src="{{ 'utilities.js' | asset_url }}" defer></script>
  </body>
</html>
