{{ 'reviews.css' | asset_url | stylesheet_tag }}

<div class="introduction">
  <div class="title">
    <h1>{{ section.settings.title }}</h1>
  </div>

  <div class="subtitle">
    <h2>{{ section.settings.subtitle }}</h2>
    <div class="subtitle__stars">
      {% for i in (1..section.settings.stars) %}
        {{ 'star-icon.svg' | inline_asset_content }}
      {% endfor %}
    </div>
  </div>
</div>

<div class="reviews">
  {% for block in section.blocks %}
    <div class="review">
      {% if block.settings.image != blank %}
        {{
          block.settings.image
          | image_url: width: block.settings.image.width, height: block.settings.image.height
          | image_tag: class: 'review__image'
        }}
      {% else %}
        <img
          class="review__image"
          width="953"
          height="1334"
          src="{{ 'persona-placeholder.png' | asset_img_url: 'master'  }}"
        >
      {% endif %}
      <div class="review__details">
        <div class="review__author">{{ block.settings.author }}</div>
        <div class="review__country">{{ block.settings.country }}</div>
        <div class="review__rating">
          {% for i in (1..block.settings.rating) %}
            {{ 'star-icon.svg' | inline_asset_content }}
          {% endfor %}
        </div>
        <div class="review__comment">
          <p>
            {{ block.settings.comment }}
          </p>
        </div>
        <div aria-hidden="false" class="divider"></div>
        <div class="review__product">
          {% if block.settings.product != blank %}
            {{
              block.settings.product.featured_image
              | image_url:
                width: block.settings.product.featured_image.width,
                height: block.settings.product.featured_image.height
              | image_tag: class: 'review__product-image'
            }}
            <div class="review__product-name">{{ block.settings.product.title }}</div>
          {% else %}
            <img
              class="review__product-image"
              width="1000"
              height="500"
              src="{{ 'product-placeholder.png' | asset_img_url: 'master' }}"
            >
            <div class="review__product-name">Lorem ipsum dolor sit amet</div>
          {% endif %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>

<div class="reviews-paginator"><span class="curr-page">1</span> 2 3 â€¦ 30 ></div>

{% schema %}
{
  "name": "Reviews",
  "tag": "section",
  "class": "sec-reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Real Reviews, Real Experiences"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "With 1600+ 5-star reviews"
    },
    {
      "type": "range",
      "id": "stars",
      "min": 0,
      "max": 5,
      "step": 1,
      "label": "Amount of Stars",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Review Image"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name",
          "default": "Louise S."
        },
        {
          "type": "text",
          "id": "country",
          "label": "Country Name",
          "default": "United States"
        },
        {
          "type": "range",
          "id": "rating",
          "min": 0,
          "max": 5,
          "step": 1,
          "label": "Rating",
          "default": 5
        },
        {
          "type": "textarea",
          "id": "comment",
          "label": "Comment",
          "default": "Lorem ipsum dolor sit amet consectetur. Volutpat fames diam volutpat a. Ultricies lacinia eu cras massa odio. "
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ]
}
{% endschema %}
