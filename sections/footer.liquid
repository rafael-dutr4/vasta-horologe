<script>
  document.querySelectorAll('.footer__navigation-section-title').forEach((node) => {
    node.addEventListener('click', (e) => {
      if (node.nextElementSibling.clientHeight) {
        node.nextElementSibling.style.height = '0';
        node.nextElementSibling.style.visibility = 'none';
      } else {
        node.nextElementSibling.style.visibility = 'visible';
        node.nextElementSibling.style.height = node.nextElementSibling.scrollHeight + 'px';
      }
    });
  });
</script>

